@model Projeto_PetShop.Models.Servico
@{
    ViewData["Title"] = "Editar Servico";
}
<div class="text-center">
    <h1 class="display-4">Editar Servico</h1>
</div>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id"/>
    <div>
        <label asp-for="Nome">Nome *</label>
        <input type="text" asp-for="Nome" class="form-control"/>
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="Valor">Valor *</label>
        <input type="number" step="0.01" asp-for="Valor" class="form-control"/>
        <span asp-validation-for="Valor" class="text-danger"></span>
    </div>

        <button type="submit" class="btn btn-primary mt-3">Salvar Alteração</button>
        <a asp-action="Index" class="btn btn-secondary mt-3">Cancelar</a>
</form>