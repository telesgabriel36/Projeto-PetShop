@model Projeto_PetShop.Models.Pagamento

@{
    ViewData["Title"] = "Deletar Pagamento";
}

<div class="container mt-5">
    <div class="card shadow-lg rounded p-4 mx-auto" style="max-width: 600px;">
        <h2 class="text-center text-danger mb-4">Deletar Pagamento</h2>

        @if (ViewBag.ErrorMessage != null)
        {
            <div class="alert alert-danger text-center">
                @ViewBag.ErrorMessage
            </div>
        }

        <div class="text-center mb-4">
            <h5>Tem certeza que deseja excluir este pagamento?</h5>
            <p class="text-muted">Após a exclusão, as informações não poderão ser recuperadas.</p>
        </div>

        <div class="border rounded p-3 bg-light">
            <p><strong>💳 Forma de Pagamento:</strong> @Model.MetodoPagamento</p>
            <p><strong>💰 Valor:</strong> R$ @Model.Valor.ToString("F2")</p>
            <p><strong>📅 Data do Pagamento:</strong> @Model.DataPagamento.ToString("dd/MM/yyyy")</p>
            <p><strong>🐾 Pet (agendamento):</strong> @Model.Agendamento?.Pet?.Nome</p>
            <p><strong>💼 Serviço:</strong> @Model.Agendamento?.Servico?.Nome</p>
        </div>

        <form asp-action="Delete" method="post" class="text-center mt-4">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger me-2">Confirmar Exclusão</button>
            <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
        </form>
    </div>
</div>
