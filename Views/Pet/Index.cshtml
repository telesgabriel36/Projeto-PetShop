@model IEnumerable<Projeto_PetShop.Models.Pet>
@{
    ViewData["Title"] = "Lista de Pets";
}

<div class="text-center">
    <h1 class="display 4"> Lista de Pets</h1>
</div>

@if(TempData["MensagemSucesso"] != null)
{
    <div class="alert alert-success text-center">
        @TempData["MensagemSucesso"]
    </div> 
} 


<div class="container mt-5">
    <div class="card shadow-lg rounded p-4">

         <div class="d-flex justify-content-between align-items-center mb-3">
            <a asp-action="Create" class="btn btn-success btn-lg ">+ Cadastrar Pet</a>
        </div>

        <table class="table table-striped table-bordered text-center align-middle">
            <thead class="table-dark">
                <tr>
                    <th>Nome</th>
                    <th>Espécie</th>
                    <th>Raça</th>
                    <th>Tutor</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var pet in Model)
                {
                    <tr>
                        <td>@pet.Nome</td>
                        <td>@pet.Especie</td>
                        <td>@pet.Raca</td>
                        <td>@pet.Tutor?.Nome</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@pet.Id" class="btn btn-warning btn-sm">Editar</a>
                            <a asp-action="Delete" asp-route-id="@pet.Id" class="btn btn-danger btn-sm">Excluir</a>
                            <a asp-action="Details" asp-route-id="@pet.Id" class="btn btn-info btn-sm">Detalhes</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
